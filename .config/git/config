[user]
    email = al3x.s0rg@gmail.com
    name = Shevchenko Alexey

[core]
    editor = vim
    pager = less --quit-if-one-screen
    whitespace = cr-at-eol

[color]
    ui = auto

[push]
    default = current

[branch]
    sort = -committerdate
    autosetuprebase = always

[fetch]
    prune = true

[pull]
    rebase = true
    ff = only

[merge]
	ff = only

[rebase]
    instructionFormat = "[%an - %ar] %s"
    autoStash = true

[init]
    defaultBranch = master

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    features = line-numbers navigate decorations

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = omit
    file-decoration-style = none
    hunk-header-style = file line-number syntax
    hunk-header-decoration-style = box

[alias]
    aa = add --all .
    br = branch -vv
    cm = commit -am
    co = checkout
    gr = grep -ni
    st = status
    ll = log --all --decorate --oneline --graph --stat
    ls = ls-files
    ta = tag -m '' -a
    bra = branch -vv -a
    cob = checkout -b
    cof = checkout -f
    com = !git co master && git pull
    mem = merge master
    wat = whatchanged
    put = push origin --tags
    # cleaner diff - no contents for deleted files
    did = diff --irreversible-delete
    # list of "places of interest"
    todos = grep --break --heading --line-number -I --word-regexp -e TODO -e FIXME -e BUG
    # amends last commit
    amend = commit -a --amend --reuse-message=HEAD
    # commiter stats
    stats = shortlog -sn
    # get repo source URL
    origin = config --get remote.origin.url
    # get repo root dir
    root = rev-parse --show-toplevel
    # list of last 5 tags
    tags = !git tag -l | sort --version-sort | tail -n 5
    # list branches
    branches = !git branch -a --no-color | tr -d "[*[:blank:]]" | grep -v "HEAD" | sed -e "s/^remotes\\\\/origin\\\\///" | sort -u
    # fetch and removes deleted (at origin) branches
    ff = fetch --tags --prune --prune-tags --all
    # get repo root dir
    root = rev-parse --show-toplevel
    # age of repo
    born = !git log --pretty='format:%ar at %ai' --reverse | head -1
    # local aliases
    aliases = !git config -l | grep '^alias' | cut -c 7- | sort
    # Remove BRanches MeRged
    rbrmr = !git branch --merged | grep -v -e '^* ' -e '^  ma' | xargs -n 1 git branch -d
    # total cleansing
    gc-force = !git reflog expire --all --expire=now && git gc --prune=now --aggressive
    # zip
    zip = !git archive -o "$(basename "$(git root)")".zip HEAD
    tag-rm = push --delete origin

[include]
    path = "urls.local"
