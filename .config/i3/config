# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# vim: filetype=i3config

set $mod  Mod4
set $ctrl Control
set $term kitty

set $vol_step 5%
set $bri_step 10

floating_modifier             $mod
workspace_layout              tabbed
workspace_auto_back_and_forth no
focus_wrapping                workspace
default_border                none
default_floating_border       none
default_orientation           horizontal
show_marks                    no
focus_follows_mouse           no
hide_edge_borders             both
mouse_warping                 none

## KEYS

mode "$rofi" {
    bindsym r exec --no-startup-id "rofi -show combi -display-combi 'run '", mode "default"
    bindsym w exec --no-startup-id "rofi -show window -display-window 'win '", mode "default"
    bindsym f exec --no-startup-id "rofi -show rfox -modi rfox:~/.local/scripts/rofifox", mode "default"
    bindsym q exec --no-startup-id "rofi -show roff -modi roff:~/.local/scripts/rofioff", mode "default"

    bindsym Escape mode "default"
}

set $rofi rofi:: [r]un [w]in [f]ox [q]uit

mode "$window" {
    bindsym k kill, mode "default"
    bindsym f fullscreen toggle, mode "default"
    bindsym l floating toggle, mode "default"
    bindsym s sticky toggle, mode "default"
    bindsym x exec --no-startup-id xkill, mode "default"

    bindsym Escape mode "default"
}

set $window window:: [k]ill [x]kill [f]ull f[l]oat [s]ticky

mode "$toggle" {
    bindsym t exec --no-startup-id touchpad_toggle, mode "default"
    bindsym m exec --no-startup-id pulse_mic_toggle, mode "default"
    bindsym r exec --no-startup-id pkill -USR1 redshift, mode "default"

    bindsym d exec --no-startup-id dunstctl set-paused toggle, mode "default"
    bindsym n exec --no-startup-id dunstctl close-all, mode "default"

    bindsym Escape mode "default"
}

set $toggle toggle:: [t]ouchpad [m]ic [r]edshift [d]unst [n]otifies

# start a terminal
bindsym $mod+Return     exec $term, focus

# window navigation
bindsym $mod+Down       focus left
bindsym $mod+Up         focus right

# workspace navigation
bindsym $mod+Right      workspace prev
bindsym $mod+Left       workspace next

# modes
bindsym $mod+r          mode "$rofi"
bindsym $mod+w          mode "$window"
bindsym $mod+t          mode "$toggle"

bindsym $mod+$ctrl+r    restart

# media keys
bindsym XF86AudioRaiseVolume  exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +$vol_step
bindsym XF86AudioLowerVolume  exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -$vol_step
bindsym XF86AudioMute         exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioPlay         exec --no-startup-id cmus-remote --pause
bindsym XF86AudioNext         exec --no-startup-id cmus-remote --next
bindsym XF86AudioPrev         exec --no-startup-id cmus-remote --prev
bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc $bri_step
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec $bri_step

bindsym Print                 exec --no-startup-id i3-scrot --desk
bindsym Shift+Print           exec --no-startup-id i3-scrot --window

# scratchpads
bindsym $mod+c [instance="cmus"] scratchpad show


## WINDOW RULES

for_window [urgent=latest]               focus
for_window [class="^.*"]                 border none
for_window [class="^pavucontrol-qt$"]    floating enable
for_window [class="^zoom$"]              floating enable
for_window [window_role="pop-up"]        floating enable
for_window [window_role="bubble"]        floating enable
for_window [window_role="task_dialog"]   floating enable
for_window [window_role="Preferences"]   floating enable
for_window [window_type="dialog"]        floating enable
for_window [window_type="menu"]          floating enable
for_window [window_type="notification"]  floating enable
for_window [window_type="toolbar"]       floating enable
for_window [window_type="splash"]        floating enable
for_window [window_type="utility"]       floating enable
for_window [window_type="dropdown_menu"] floating enable
for_window [window_type="popup_menu"]    floating enable
for_window [window_type="tooltip"]       floating enable
for_window [window_type="dock"]          floating enable
for_window [instance="cmus"]             move scratchpad

# for_window [instance="cmus"]             move position px 25px 25px, \
#                                         resize shrink height 300px, \
#                                         resize grow width 683px, \
#                                         move scratchpad

## WORKSPACES

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
#set $ws6 "6"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
#bindsym $mod+6 workspace number $ws6

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
#bindsym $mod+Shift+6 move container to workspace number $ws6

assign [class="^kitty$"]          $ws1

# web
assign [class="^Firefox$"]        $ws2
assign [class="^Tor Browser$"]    $ws2
assign [class="^qbittorrent$"]    $ws2

# chat
assign [class="Telegram"]         $ws3

# apps
assign [class="^okular$"]         $ws4
assign [class="^pcmanfm-qt$"]     $ws4
assign [class="^qimgv$"]          $ws4
assign [class="^featherpad$"]     $ws4

# zoom
assign [class="^zoom$"]           $ws5


## UI

# remove all decorations
font                          pango:monospace 0px
set_from_resource             $bg i3wm.color0 #000000
set_from_resource             $fg i3wm.color2 #00FF00

client.focused                $bg $fg $bg $bg $bg
client.focused_inactive       $bg $bg $bg $bg $bg
client.unfocused              $bg $bg $bg $bg $bg
client.placeholder            $bg $bg $bg $bg $bg
client.urgent                 $bg $bg $bg $bg
client.background             $bg


## AUTOSTART

exec --no-startup-id systemctl --user import-environment DISPLAY
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock-fancy

exec --no-startup-id setxkbmap -model pc105 -layout us,ru -option terminate:ctrl_alt_bksp,grp:ctrl_shift_toggle
exec --no-startup-id xset m 20/10 10 r rate 350 30 b on s 600

exec --no-startup-id /usr/libexec/geoclue-2.0/demos/agent
exec --no-startup-id wal -R
exec --no-startup-id feh --no-fehbg --bg-fill ~/.config/i3/wall.png

# bar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

exec --no-startup-id nm-applet
exec --no-startup-id kbdd
exec --no-startup-id udiskie

# first terminal
exec --no-startup-id $term
#exec --no-startup-id -name cmus $term cmus
